<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_style0"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_style0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_style0_handler"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_touch" />
    </LinearLayout>

    <View
        android:id="@+id/v_style0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#e3e4e5" />

    <TextView
        android:id="@+id/tv_style1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/corner_bg_touch_normal"
        android:gravity="center" />
</FrameLayout>